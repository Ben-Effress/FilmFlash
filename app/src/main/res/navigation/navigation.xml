<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/movieListFragment2">
    <fragment
        android:id="@+id/movieListFragment2"
        android:name="com.example.filmflash.MovieListFragment"
        android:label="MovieListFragment" >
        <action
            android:id="@+id/action_movieListFragment2_to_movieInfoFragment3"
            app:destination="@id/movieInfoFragment3" />
    </fragment>
    <fragment
        android:id="@+id/movieInfoFragment3"
        android:name="com.example.filmflash.MovieInfoFragment"
        android:label="fragment_movie_info"
        tools:layout="@layout/fragment_movie_details" >
        <argument
            android:name="movieID"
            app:argType="integer" />
        <action
            android:id="@+id/action_movieInfoFragment3_to_reviewFragment"
            app:destination="@id/reviewFragment" />
    </fragment>
    <fragment
        android:id="@+id/reviewFragment"
        android:name="com.example.filmflash.ReviewFragment"
        android:label="fragment_review"
        tools:layout="@layout/fragment_review_details" >
        <argument
            android:name="content"
            app:argType="string" />
        <argument
            android:name="author"
            app:argType="string" />
        <argument
            android:name="rating"
            app:argType="float" />
        <argument
            android:name="avatarPath"
            app:argType="string"
            app:nullable="true" />
    </fragment>
</navigation>